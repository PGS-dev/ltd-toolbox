{
  "name": "@ltd-toolbox/ts-runner",
  "version": "0.0.0",
  "keywords": [
    "typescript",
    "esbuild",
    "tsx",
    "dotenv",
    "runner",
    "execute",
    "cli"
  ],
  "scripts": {
    "build": "echo nothing to do here!",
    "lint": "eslint cli.js --report-unused-disable-directives --max-warnings 0",
    "format": "yarn prettier cli.js --write",
    "codecheck": "yarn lint && yarn prettier cli.js --check"
  },
  "bin": {
    "tsrun": "cli.js"
  },
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "minimist": "^1.2.8",
    "tsx": "^3.12.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
