{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "module": "NodeNext",
    "lib": ["es2020"],
    "types": ["node"],
    "paths": {
      "*": [
        "node_modules/*",
        "packages/*"
      ]
    }
  }
}
